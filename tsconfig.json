{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "scene/*": ["scene/*"],
      "components/*": ["components/*"],
      "contexts/*": ["contexts/*"],
      "utils/*": ["utils/*"],
      "state/*": ["state/*"],
      "reducers/*": ["reducers/*"],
      "selectors/*": ["selectors/*"],
      "types/*": ["types/*"]
    }
  },
  "include": [
    "src"
  ]
}
